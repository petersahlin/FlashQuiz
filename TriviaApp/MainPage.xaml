<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaApp.MainPage">

    <VerticalStackLayout>
        <Frame>
            <Label>Question here</Label>
        </Frame>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Text="Answer 1"/>
            <Button Grid.Row="0" Grid.Column="1" Text="Answer 2"/>
            <Button Grid.Row="1" Grid.Column="0" Text="Answer 3"/>
            <Button Grid.Row="1" Grid.Column="1" Text="Answer 4"/>
        </Grid>

    </VerticalStackLayout>

</ContentPage>
